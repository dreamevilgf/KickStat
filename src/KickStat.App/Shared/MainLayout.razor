            Black = "#000000",
        },
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] {"Roboto", "Helvetica", "Arial", "sans-serif"},
                FontSize = "0.875rem",
                FontWeight = 400
            },
            Subtitle1 = new Subtitle1()
            {
                FontFamily = new[] {"Open Sans", "Roboto", "Helvetica", "sans-serif"},
                FontSize = "0.875rem",
